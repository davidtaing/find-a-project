datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id                      String         @id @default(cuid())
  name                    String         @unique @default("")
  email                   String         @unique @default("")
  password                String
  isAdmin                 Boolean        @default(false)
  profile                 Profile?       @relation("Profile_userId")
  organizations           Organization[] @relation("Organization_members")
  projects                Project[]      @relation("Project_members")
  createdAt               DateTime?      @default(now())
  from_Organization_admin Organization[] @relation("Organization_admin")
  from_Project_admin      Project[]      @relation("Project_admin")
}

model Profile {
  id        String    @id @default(cuid())
  userId    User?     @relation("Profile_userId", fields: [userIdId], references: [id])
  userIdId  String?   @unique @map("userId")
  website   String    @default("")
  linkedin  String    @default("")
  github    String    @default("")
  gitlab    String    @default("")
  createdAt DateTime? @default(now())
}

model Organization {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @default("")
  website   String    @default("")
  linkedin  String    @default("")
  github    String    @default("")
  gitlab    String    @default("")
  admin     User[]    @relation("Organization_admin")
  members   User[]    @relation("Organization_members")
  projects  Project[] @relation("Project_organization")
  createdAt DateTime? @default(now())
}

model Project {
  id             String        @id @default(cuid())
  name           String        @default("")
  website        String        @default("")
  linkedin       String        @default("")
  repository     String        @default("")
  admin          User[]        @relation("Project_admin")
  members        User[]        @relation("Project_members")
  organization   Organization? @relation("Project_organization", fields: [organizationId], references: [id])
  organizationId String?       @map("organization")
  description    String        @default("")

  @@index([organizationId])
}
